<section class="text-center">
  <div class="mt-4">
    <h3>{{singleBlogData.title}}</h3>
    <p class="m-0">By: {{singleBlogData.blog_author.username}}</p>
    <p class="m-0">Posted on: {{format_date singleBlogData.date_created}}</p>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="text-center mt-3 pt-3 border col-8">
      <p>{{singleBlogData.content}}</p>
    </div>
    <div class="col-2"></div>
  </div>
</section>
<section class="text-center mt-4">
  <h3>Comments:</h3>
  {{#each blogComments as |comment| }}
  <div class="row">
  <div class="col-4"></div>
  <div class="text-center mt-3 pt-3 pb-3 border col-4">
    <p>From: {{comment_author.username}}</p>
    <p>{{content}}</p>
    {{#if (is_equal ../user_id comment_author.id)}}
      <div class="mt-4">
        <button class="btn btn-info"><a href="" style="color: white">Edit</a></button>
        <button class="btn btn-danger" value={{id}} onClick="deleteComment(this)" id="delete-post">Delete</button>
      </div>
    {{/if}}
  </div>
  <div class="col-4"></div>
</div>
  {{/each}}
</section>
{{> post-comment}}
<script src='/js/singleBlog.js'></script>