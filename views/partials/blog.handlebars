{{#each blogs as |blog| }}
<div class="row">
  <div class="col-md-3"></div>
  <div class="text-center border mx-3 mt-3 col-md-6">
    <div class="mt-2">
      <a href="/blogs/{{id}}"><h2>{{blog.title}}</h2></a>
      <p class="mb-0">Author: {{blog_author.username}}</p>
      <p class="mb-2">Created: {{format_date blog.date_created}}</p>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>
{{/each}}