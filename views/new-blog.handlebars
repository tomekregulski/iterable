<div class="row mt-4">
  <div class="col-3"></div>
  <div class="col-6">
    <div class="text-center">
      <h3 style="color: rgba(104, 55, 182, 0.817);">Create a New Blog:</h3>
    </div>
    <form class="mt-4">
      <div class="form-group">
        <input type="text" class="form-control" id="blog-title" placeholder="Title">
      </div>
      <div class="form-group">
        <textarea class="form-control mt-4" id="blog-content" rows="3" placeholder="Content"></textarea>
      </div>
      <div>
        <button type="submit" class="btn btn-primary btn-lg" id="submit-blog" style="background-color: rgba(104, 55, 182, 0.817); border: rgba(104, 55, 182, 0.817);">Create</button>
      </div>
    </form>
  </div>
  <div class="col-3"></div>
</div>
