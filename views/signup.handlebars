<div class="row mt-5">
  <div class="col-4"></div>
  <div class="col-4">
    <div class="text-center mt-3">
      <h3>Register New User</h3>
    </div>
    <form class="mt-4 signup-form">
      <div class="form-group">
        <input type="text" class="form-control" id="username-signup" placeholder="Username">
      </div>
      <div class="form-group">
        <input type="text" class="form-control" id="email-signup" placeholder="Email">
      </div>
      <div class="form-group">
        <input type="password" class="form-control mt-1" id="password-signup" placeholder="Password">
      </div>
      <div>
        <button type="submit" class="btn btn-primary btn-lg" id="signup-btn">Register</button>
      </div>
      <div class="mt-2">
        <a href="/login">Login</a>
      </div>
    </form>
  </div>
  <div class="col-4"></div>
</div>

<script src="/js/register.js"></script>